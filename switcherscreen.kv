<MyScreenManager>:
    FirstScreen:
    SecondScreen:
    ThirdScreen:
    FourthScreen:

<FirstScreen>:

    name: '_first_screen_'
    GridLayout:
        cols:1
        GridLayout:
            cols:2
            Label:
                text: "Part Description:"
            TextInput:
                id: part
                multiline: False
        GridLayout:
            cols:1
            Button:
                text: "Submit"
                on_press: root.pressed()
            Button:
                text: "clear results"
                on_press: root.cleared()
            Button:
                text: "Next Screen"
                on_press: app.root.current = '_second_screen_'
        GridLayout:
            id: last_thing
            cols: 2
            Button:
                id: one
                text:
                on_press: root.one()
            Button:
                id: two
                text:
                on_press: root.two()

            Button:
                id: three
                text:
                on_press: root.three()
            
            
<SecondScreen>:
    name: '_second_screen_'
    Label:
        id: second_screen_label
        text: "Hi I'm The Second Screen"
    Button:
        text: "Go to the third screen"
        on_press: app.root.current = '_third_screen_'

<ThirdScreen>:
    name: '_third_screen_'
    GridLayout:
        cols:1
        Label:
            id: third_screen_label
            text: "Hi I'm The Third Screen"
        Button:
            text: "go home"
            on_press: app.root.current = '_first_screen_'

<FourthScreen>:
    name: '_fourth_screen_'
    Label:
        id: fourth_screen_label
        text: "Hi I'm The Fourth Screen"

<OurPopop>:
    Label:
        text: "You pressed the button"
        size_hint: 0.6, 0.2
        pos_hint: {"x":0.2, "top":1}

    Button:
        id: the_item
        text: 
        size_hint: 0.8, 0.2
        pos_hint: {"x":0.1, "y":0.1}